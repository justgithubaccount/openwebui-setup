# ===========================================
# DOMAIN CONFIGURATION (REQUIRED)
# ===========================================
DOMAIN=your-domain.com

# ===========================================
# AI PROVIDER APIS (Choose one or more)
# ===========================================

# OpenAI Configuration
OPENAI_API_KEY=
# OPENAI_API_BASE_URL=https://api.openai.com/v1

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=
# ANTHROPIC_API_BASE_URL=https://api.anthropic.com/v1

# Google Gemini Configuration
GOOGLE_API_KEY=

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT_NAME=
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Groq Configuration (Fast inference)
GROQ_API_KEY=

# Mistral AI Configuration
MISTRAL_API_KEY=

# Cohere Configuration
COHERE_API_KEY=

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
WEBUI_AUTH=true
WEBUI_SECRET_KEY=change-this-to-random-string-minimum-32-chars
ENABLE_SIGNUP=true
DEFAULT_USER_ROLE=pending

# ===========================================
# WEB SEARCH (RAG)
# ===========================================
ENABLE_RAG_WEB_SEARCH=true
RAG_WEB_SEARCH_ENGINE=duckduckgo
RAG_WEB_SEARCH_RESULT_COUNT=3

# For private search with SearXNG (optional)
# RAG_WEB_SEARCH_ENGINE=searxng
# SEARXNG_QUERY_URL=http://searxng:8080/search?q=<query>

# ===========================================
# EMAIL CONFIGURATION (For notifications)
# ===========================================
# Gmail example:
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# ===========================================
# UI CUSTOMIZATION
# ===========================================
WEBUI_NAME=Open WebUI
SHOW_ADMIN_DETAILS=true

# ===========================================
# RATE LIMITING
# ===========================================
ENABLE_RATE_LIMIT=false
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_PERIOD=3600

# ===========================================
# MEMORY OPTIMIZATION
# ===========================================
# Disable local embeddings to save memory when using external APIs only
RAG_EMBEDDING_ENGINE=
RAG_EMBEDDING_MODEL=
ENABLE_RAG_LOCAL_WEB_FETCH=false
